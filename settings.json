            "body": {
              "mode": "raw",
              "raw": "{\n  \"logoUrl\": \"https://example.com/new-logo.png\",\n  \"logoType\": \"primary\",\n  \"altText\": \"Updated Company Logo\",\n  \"isActive\": true\n}"
