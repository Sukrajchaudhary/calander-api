              "raw": "{{baseUrl}}/settings/logos/:id",
              "host": ["{{baseUrl}}"],
              "path": ["settings", "logos", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "logo_id_here",
                  "description": "Logo ID"
                }
              ]
            },
            "description": "Update an existing company logo (Admin only)"
          },
          "response": []
        },
        {
          "name": "Delete Company Logo",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
