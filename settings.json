    {
      "name": "Settings",
      "item": [
        {
          "name": "Get All Settings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/settings",
              "host": ["{{baseUrl}}"],
              "path": ["settings"]
            },
            "description": "Get all settings including company logos, contact info, and social media links"
          },
          "response": []
        }
      ]
    },
